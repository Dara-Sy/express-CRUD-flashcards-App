<% include ../partials/boilerplate %>

<div class="flashcard-single-container">
  <% flashcards.forEach(flashcard => { %>
    <div class= "flashcard">
      <p class="question"> <%=flashcard.question %> </p>
      <h3><%= flashcard.answer %></h3>
      <div class = "meta">
        <span class = "category"> <%= flashcard.category%></span>
        <span class = "difficulty"> <%= flashcard.difficulty%></span>
        <a href = "/flashcards/<%=flashcard.id%>/edit" class="editlink"> EDIT </a>
        <form action= "/flashcards/<%=flashcard.id%>?_method=DELETE" class="delete" method="POST">
          <input type = "submit" class = "delink" value = "Delete">
        </form>
      </div>
    <a href = "/flashcard" class="linktosingle"> Back to all flashcards </a>
    </div>
</div>

<%include ../partials/end %>
